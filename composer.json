{
  "name": "contao-community-alliance/translator",
  "description": "Multipurpose translation manager and interface",
  "license": "LGPL-3.0-or-later",
  "type": "contao-bundle",
  "keywords": [
    "contao",
    "translation",
    "cca"
  ],
  "authors": [
    {
      "name": "Christian Schiffler",
      "email": "c.schiffler@cyberspectrum.de",
      "homepage": "https://www.cyberspectrum.de",
      "role": "Developer"
    },
    {
      "name": "Stefan Heimes",
      "email": "stefan_heimes@hotmail.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://c-c-a.org/",
  "support": {
    "email": "info@contao-community-alliance.de",
    "issues": "https://github.com/contao-community-alliance/translator/issues",
    "irc": "irc://irc.freenode.org/contao.cca",
    "source": "https://github.com/contao-community-alliance/translator"
  },
  "require": {
    "php": "^8.1",
    "contao-community-alliance/events-contao-bindings": "^4.13",
    "contao/core-bundle": "^4.13",
    "symfony/config": "^5.4",
    "symfony/dependency-injection": "^5.4",
    "symfony/event-dispatcher": "^5.4",
    "symfony/event-dispatcher-contracts": "^1.1 || ^2.0",
    "symfony/http-kernel": "^5.4",
    "symfony/translation": "^5.4"
  },
  "require-dev": {
    "contao-community-alliance/dependency-container": "^2.1",
    "contao/manager-bundle": "^4.13",
    "phpcq/runner-bootstrap": "^1.0@dev"
  },
  "conflict": {
    "contao-community-alliance/dependency-container": "<2.1 >=3.0"
  },
  "autoload": {
    "psr-4": {
      "ContaoCommunityAlliance\\Translator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ContaoCommunityAlliance\\Translator\\Test\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": false,
      "contao/manager-plugin": false,
      "php-http/discovery": false
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.3.x-dev",
      "dev-support/2.0.x": "2.0.x-dev",
      "dev-support/2.1.x": "2.1.x-dev",
      "dev-support/2.2.x": "2.2.x-dev"
    },
    "contao-manager-plugin": "ContaoCommunityAlliance\\Translator\\ContaoManager\\Plugin"
  }
}
